<div class="vads-l-row">
  <div class="vads-l-col">
    <% if RequestStore.store[:flipper_user_email_for_log].blank? %>
      <p>If you'd like to modify feature toggles, please sign in with GitHub.</p>
      <form action="/flipper/features" method="post" class="usa-form">
        <button type="submit" style="background-color:black; width:auto; margin-top:0; vertical-align:middle">
          <svg viewBox="0 0 24 24" aria-hidden="true" style="height:30px; fill: white"><path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.463 2 11.97c0 4.404 2.865 8.14 6.839 9.458.5.092.682-.216.682-.48 0-.236-.008-.864-.013-1.695-2.782.602-3.369-1.337-3.369-1.337-.454-1.151-1.11-1.458-1.11-1.458-.908-.618.069-.606.069-.606 1.003.07 1.531 1.027 1.531 1.027.892 1.524 2.341 1.084 2.91.828.092-.643.35-1.083.636-1.332-2.22-.251-4.555-1.107-4.555-4.927 0-1.088.39-1.979 1.029-2.675-.103-.252-.446-1.266.098-2.638 0 0 .84-.268 2.75 1.022A9.607 9.607 0 0 1 12 6.82c.85.004 1.705.114 2.504.336 1.909-1.29 2.747-1.022 2.747-1.022.546 1.372.202 2.386.1 2.638.64.696 1.028 1.587 1.028 2.675 0 3.83-2.339 4.673-4.566 4.92.359.307.678.915.678 1.846 0 1.332-.012 2.407-.012 2.734 0 .267.18.577.688.48 3.97-1.32 6.833-5.054 6.833-9.458C22 6.463 17.522 2 12 2Z"></path></svg>
          <span>Sign in to GitHub</span>
        </button>
      </form>
    <% elsif !RequestStore.store[:flipper_authorized] %>
        <p>You are not authorized to perform any actions. Please see <a href="https://depo-platform-documentation.scrollhelp.site/developer-docs/feature-toggles" target="_blank">Platform Documentation</a> for more information.</p>
    <% end %>
    <table class="vads-u-margin-top--0">
      <caption class="vads-u-font-size--xl">Features</caption>
      <thead>
        <tr>
          <th>Status</th>
          <th>Feature</th>
          <th>Description</th>
          <th>Enabled Gates</th>
        </tr>
      </thead>
      <tbody>
        <% @features.each do |feature| %>
          <tr>
            <td>
              <%= feature.state.capitalize %>
            </td>
            <td>
              <%# TODO Add `|| Rails.env.development?` back to line below %>
              <% if RequestStore.store[:flipper_authorized] || Rails.env.development? %>
                <a href="<%= "#{script_name}/features/#{feature.key}" %>">
                  <%= feature.key %>
                </a>
              <%else%>
                  <%= feature.key %>
              <% end %>
            </td>
            <td>
              <%= yaml_features.dig(feature.key,'description') %>
            </td>
            <td>
              <%= feature.pretty_enabled_gate_names %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
