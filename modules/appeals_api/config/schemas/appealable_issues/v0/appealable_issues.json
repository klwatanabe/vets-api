{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "JSON Schema for Appealable Issues endpoint",
  "type": "object",
  "properties": {
    "fileNumber": {
      "allOf": [
        { "$ref": "nonBlankString.json" },
        {
          "description": "Veteran's file number",
          "minLength": 1,
          "maxLength": 9
        }
      ]
    },
    "icn": {
      "allOf": [
        { "$ref": "icn.json" },
        { "description": "Veteran's ICN" }
      ]
    },
    "receiptDate": {
      "description": "(yyyy-mm-dd) Date to limit the appealable issues",
      "type": "string",
      "format": "date"
    },
    "ssn": {
      "allOf": [
        { "$ref": "ssn.json" },
        { "description": "Veteran's SSN" }
      ]
    }
  },
  "oneOf": [
    { "required": ["icn", "receiptDate", "ssn"] },
    { "required": ["fileNumber", "icn", "receiptDate"] }
  ]
}
